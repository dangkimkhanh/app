<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    android:id="@+id/main_view_pos"
    android:elevation="2dp">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_view_post"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Chi tiết bài viết"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center" />
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        app:layout_constraintTop_toTopOf="@id/toolbar_view_post"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bar_chat"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avt_image_user"
                    android:src="@drawable/ic_avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#A4A4A4" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/nameView_user"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên người dùng"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/time_post_user"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 giờ trước"
                        android:textColor="#808080"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/text_status_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Nội dung bài viết mẫu. Đây là nội dung của bài viết này, có thể là văn bản, cảm xúc, chia sẻ..."
                android:textSize="14sp" />
            <TextView
                android:id="@+id/text_view_post_user"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="24sp"
                android:ellipsize="end"
                android:maxLines="4"
                android:visibility="gone"
                android:gravity="center"
                android:background="@drawable/corner5dp"
                android:padding="16dp" />
            <ImageView
                android:id="@+id/image_post_user"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/ic_image_placeholder"
                android:scaleType="centerCrop"
                android:background="?android:attr/selectableItemBackground"/>
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="30dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/rouded_elip_backgroud">
                    <ImageView
                        android:id="@+id/imageViewLikef"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_heart"
                        app:tint="@color/color_selector" />
                    <TextView
                        android:id="@+id/textViewLikeCountf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textSize="14sp"
                        android:layout_marginStart="7dp"
                        android:textColor="#000000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/rouded_elip_backgroud">
                    <ImageView
                        android:id="@+id/imageCmtFeed"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:tint="#797979"
                        android:src="@drawable/ic_comment"/>
                    <TextView
                        android:id="@+id/textViewCmtCountf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textSize="14sp"
                        android:layout_marginStart="7dp"
                        android:textColor="#000000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:background="@drawable/rouded_elip_backgroud">
                    <ImageView
                        android:id="@+id/imageViewSharef"
                        android:layout_width="30dp"
                        app:tint="#797979"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_share"/>
                    <TextView
                        android:id="@+id/textViewShareCountf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textSize="14sp"
                        android:textColor="#000000"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="#A9A5A5"
                android:layout_height="3dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/comment_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/bottom_bar_chat"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/bottom_bar_chat"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:padding="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/material_dynamic_neutral99">

        <ImageView
            android:id="@+id/sendmore"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_post"
            app:tint="#797979"/>

        <EditText
            android:id="@+id/input_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bodercorner_white"
            android:hint="Nhập tin nhắn..."
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:textSize="16sp"
            android:padding="9dp"/>

        <ImageView
            android:id="@+id/send_comment"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:tint="#797979"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_send"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

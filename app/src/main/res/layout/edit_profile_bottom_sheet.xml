<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/option_change_avt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thay ảnh đại diện"
        android:padding="16dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/option_change_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thay ảnh bìa"
        android:padding="16dp"
        android:gravity="center" />
    <TextView
        android:id="@+id/option_change_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sửa tên của bạn"
        android:padding="16dp"
        android:gravity="center" />
    <TextView
        android:id="@+id/option_edit_introduc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sửa phần giới thiệu"
        android:padding="16dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/option_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hủy"
        android:padding="16dp"
        android:gravity="center" />

</LinearLayout>